<?xml version="1.0"?>
<!-- https://www.livechat.com/help/use-livechat-with-content-security-policy/#cspv3 -->
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="script--livechatinc--com" type="host">*.livechatinc.com</value>
                <value id="script--livechat-static--com" type="host">*.livechat-static.com</value>
            </values>
        </policy>
        <policy id="media-src">
            <values>
                <value id="media--livechatinc--com" type="host">*.livechatinc.com</value>
                <value id="media--livechat-static--com" type="host">*.livechat-static.com</value>
            </values>
        </policy>
        <policy id="object-src">
            <values>
                <value id="object--livechatinc--com" type="host">*.livechatinc.com</value>
            </values>
        </policy>
        <policy id="child-src">
            <values>
                <value id="child--livechatinc--com" type="host">*.livechatinc.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="img--files-text--com" type="host">*.files-text.com</value>
                <value id="img--livechatinc--com" type="host">*.livechatinc.com</value>
                <value id="img--livechat-files--com" type="host">*.livechat-files.com</value>
                <value id="img--livechat-static--com" type="host">*.livechat-static.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="style--livechatinc--com" type="host">*.livechatinc.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="connect--livechatinc--com" type="host">*.livechatinc.com</value>
                <value id="connect--text--com" type="host">*.text.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
